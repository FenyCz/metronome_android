<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".playlistdatabase_others.CurrentPlaylist">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_playlist_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:background="@color/secondaryLightColor"
        android:padding="4dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_button_playlist_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:scaleType="center"
        android:src="@drawable/ic_plus"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/playlist_detail"
        android:layout_width="match_parent"
        android:text="TextView"
        android:textColor="@color/secondaryTextColor"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingStart="25dp"
        android:background="@color/secondaryLightColor"
        app:layout_constraintBottom_toTopOf="@+id/recyclerview_playlist_detail"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="128dp"
        android:layout_height="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>